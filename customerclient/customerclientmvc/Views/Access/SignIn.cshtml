@model CustomerClientMVC.Models.SignInModel;

@{
    ViewData["Title"] = "Sign in Page";
}

<div class="text-center">
    <h1 class="display-4">Sign in</h1>
    <form asp-controller="Access" asp-action="SignIn" method="post">
        <input type="text" placeholder="Login" asp-for="Login" />
        <input type="password" placeholder="Password" asp-for="Password" />
        <label>
            <input type="checkbox" asp-for="KeepLoggedIn" />
            Keep me logged in.
        </label>
        <button type="submit">Sign in</button>
        
        @if (ViewData["ValidationMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidationMessage"]</label>
        }
    </form>
</div>
