@{
    ViewData["Title"] = "Make order";
}

@{
    var menuItems = new CustomerClientBL.OrderResolver().GetMenu();
    var categories = menuItems.Select(x => x.MenuCategory).Distinct();
}

<div class="text-center">
    <h1 class="display-4">Make order</h1>
    <div>
        <label>Place order:</label>
        <button type="button" class="btn btn-primary">Place order</button>
    </div>
    <h4 class="display-4">Menu</h4>
    @foreach (var category in categories)
    {
        <div class="card mb-3">
            <img class="card-img-top" src="..." alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@category.Name</h5>
                <p class="card-text">@category.Description</p>
                <table class="table table-striped table-hover table-bordered" style="table-layout: fixed; width: 100%;">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Price, USD</th>
                            <th scope="col">Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var menuItem in category.MenuItems)
                    {
                        <tr>
                            <td>@menuItem.Name</td>
                            <td>@menuItem.Price</td>
                            <td>
                                <button type="button" class="btn btn-primary">-</button>
                                <button type="button" class="btn btn-primary">+</button>
                                <label>0</label>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    }
    <div>
        <label>Place order:</label>
        <button type="button" class="btn btn-primary">Place order</button>
    </div>
</div>
